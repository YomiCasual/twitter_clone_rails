
<% if @has_existing_bookmark %>
<%= turbo_stream.append "flash_alert" do %>
  <%= render(Alert::NewComponent.new(text: "Successfully unbookmarked tweet", is_visible: true, type: "danger" ))%>
<% end %>
<% else  %>
<%= turbo_stream.append "flash_notice" do %>
  <%= render(Alert::NewComponent.new(text: "Successfully bookmarked tweet", is_visible: true ))%>
<% end %>
<% end  %>




<%= turbo_stream.replace  dom_id(@tweet) do %>
     <%= render(TweetCard::NewComponent.new(tweet: @tweet)) %>
<% end %>